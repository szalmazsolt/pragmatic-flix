<%= form_with(model: user) do |f| %>

  <%= render "shared/errors", ar_object: user %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :username, "Username (optional)" %>
  <%= f.text_field :username, placeholder: "Only letters or numbers" %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirm password" %>
  <%= f.password_field :password_confirmation %>

  <% button_text = user.new_record? ? "Create Account" : "Update Account" %>
  <%= f.submit button_text %>

<% end %>